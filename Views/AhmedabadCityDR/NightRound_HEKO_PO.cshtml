@{
    ViewData["Title"] = "NightRound_HEKO_PO";
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col-md-8 p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>પો.સ્‍ટે. તરફ થી મો.સા. ઉ૫ર નીકળેલ હે.કો./પો.કો. ની હકીકત દર્શાવતુ ૫ત્રક</h5>
            </div>
            <div class="col-md-4 p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + Add હે.કો./પો.કો.
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" disabled selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="submit" class="form-control btn btn-outline-secondary" id="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="data_Night_Round" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>

<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> હે.કો./પો.કો.</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2" >
                        <!-- Multi Columns Form -->
                        <form class="row g-4 ">

                            <div class="col-md-6">
                                <label for="" class="form-label">પોલીસ સ્ટેશન</label>
                                <select id="inputState" class="form-select">
                                    <option selected>---Select PoliceStation---</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">તારીખ</label>
                                <input type="date" name="arrival_date" id="arrival_date" class="form-control" aria-label="...">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">પો.સ્‍ટે.માં ફાળવેલ કુલ મોટર સાયકલની સંખ્‍યા</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="પો.સ્‍ટે.માં ફાળવેલ કુલ મોટર સાયકલની સંખ્‍યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">ના.રા.માં નીકળેલ મો.સા. ની સંખ્‍યા.</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="ના.રા.માં નીકળેલ મો.સા. ની સંખ્‍યા." />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">મો.સા.સાથે ના.રા.માં નીકળેલ હે.કો./પો.કો. ની સંખ્‍યા</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="મો.સા. સાથે ના.રા.માં નીકળેલ હે.કો./પો.કો. ની સંખ્‍યા" />
                            </div>

                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">એમ.ટી.માં જમા મો.સા. (ડીફેકટ) ની સંખ્યા</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="એમ.ટી.માં જમા મો.સા. (ડીફેકટ) ની સંખ્યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">એમ.ટી.માં જમા સિ’વાય મો.સા.નહી નીકળેલા સંખ્યા</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="એમ.ટી.માં જમા સિ’વાય મો.સા.નહી નીકળેલા સંખ્યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">રિમાર્કસ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="રિમાર્કસ" />
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">+ ADD હે.કો./પો.કો.</button>
                            </div>

                        </form>

                        <!-- End Multi Columns Form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Basic Modal-->