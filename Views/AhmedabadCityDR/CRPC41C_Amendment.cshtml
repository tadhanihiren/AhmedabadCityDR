@{
    ViewData["Title"] = "CRPC41C_Amendment";
}
<style>
    table {
        table-layout: fixed;
        overflow-x: scroll;
    }

    td, th {
        word-wrap: break-word;
    }

</style>
<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</h5>
            </div>
            <div class="col p-0">
                <button type="button" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + Add CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક
                </button>
            </div>
        </div>
        <form class="row" method="post">
            <div class="col-md-2 mb-1">
                <input type="date" name="fromDate" id="fromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="toDate" id="toDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                <select id="policeStationId" name="policeStationId" asp-items="ViewBag.PoliceStation" class="form-select" required>
                    <option value="" selected disabled>--Select PoliceStation Name--</option>
                </select>
            </div>
            <div class="col-md-2 mb-1">
                <input type="submit" class="form-control btn btn-outline-secondary" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </form>
            <div class="row">
                <div class="col-md-2 mb-1">
                    <input type="button" class="form-control btn btn-outline-success" value="Download Excel" />
                </div>
            </div>
        <table id="" class="display nowrap" style="width:100%;overflow-x: scroll;">
        </table>
    </div>
</div>

<!-- Basic Modal -->
<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2" style="margin:20px">
                        <!-- Multi Columns Form -->
                        <form class="row g-4 ">

                            <div class="col-md-4">
                                <label for="inputState" class="form-label">પોલીસ સ્ટેશન</label>
                                <select id="inputState" class="form-select">
                                    <option selected>---Select PoliceStation---</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">ગુ.ર.નં કલમ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="ગુ.ર.નં કલમ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">ગુન્‍હો જાહેર તારીખ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="ગુન્‍હો જાહેર તારીખ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">અટક કર્યા તા.ટા.</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="અટક કર્યા તા.ટા." />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">આરોપી નુ નામ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="આરોપી નુ નામ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">સરનામુ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="સરનામુ" />
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label" for="gridCheck1">
                                        કોગ્નીઝેબલ ગુનો કરતી જ વખતે અટક કરેલ છે કે કેમ ?
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label" for="gridCheck1">
                                        આરોપીના ફીંગરપ્રિન્ટ સર્ચ સ્લીપ લીધેલ છે કે કેમ.? હા/ના
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="gridCheck2">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">કોલમ .70C માં જો ના તો કયા કારણસર લીધેલ નથી.?</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="કોલમ .70C માં જો ના તો કયા કારણસર લીધેલ નથી.?" />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">ગુનામાં પાછળથી અટક કરેલ હોય તો તે અંગેના CRPC -41 C</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="ગુનામાં પાછળથી અટક કરેલ હોય તો તે અંગેના CRPC -41 C" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">અટક કરનાર અધિ.નુ નામ હોદ્દો</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="અટક કરનાર અધિ.નુ નામ હોદ્દો" />
                            </div>

                            <div class="col-md-4">
                                <label for="inputState" class="form-label">જામીન મુકત કર્યા</label>
                                <select id="inputState" class="form-select" >
                                    <option selected>---Select---</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">કોર્ટ માં રવાના</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="અટક કરનાર અધિ.નુ નામ હોદ્દો" />
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">આરોપી ની સંખ્‍યા</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="અટક કરનાર અધિ.નુ નામ હોદ્દો" />
                            </div>

                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">તારીખ</label>
                                <input type="date" name="arrival_date" id="arrival_date" class="form-control" aria-label="...">
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">+ ADD CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</button>
                            </div>

                        </form>

                        <!-- End Multi Columns Form -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Basic Modal-->
