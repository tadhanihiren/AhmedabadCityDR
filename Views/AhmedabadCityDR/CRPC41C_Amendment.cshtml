@{
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
    ViewData["Title"] = "CRPC41C_Amendment";
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + Add CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" name="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Download Excel" />
            </div>
        </div>
        <table id="data_CRPC41C_Amendment" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>

<!-- Basic Modal -->
<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2">
                        <!-- Multi Columns Form -->
                        <form class="row g-4" id="form_CRPC41C_Amendment">
                            <input type="text" id="crpc41cid" name="crpc41cid" value="0" style="display:none" class="d-none" placeholder="" />
                            @if (policeStationId == 0)
                            {
                                <div class="col-md-4">
                                    <div class="dropdown">
                                        <label for="policeStationId" class="form-label">પોલીસ સ્ટેશન</label>
                                        <select id="policeStationId" name="policeStationId" class="form-select" required>
                                            <option value="" selected disabled>--Select PoliceStation Name--</option>
                                        </select>
                                    </div>
                                </div>
                            }
                            <div class="col-md-4">
                                <label for="crimesDate" class="form-label">ગુ.ર.નં કલમ</label>
                                <input type="text" class="form-control" id="crimesDate" name="crimesDate" placeholder="ગુ.ર.નં કલમ" />
                            </div>
                            <div class="col-md-4">
                                <label for="jaherTarikh" class="form-label">ગુન્‍હો જાહેર તારીખ</label>
                                <input type="text" class="form-control" id="jaherTarikh" name="jaherTarikh" placeholder="ગુન્‍હો જાહેર તારીખ" />
                            </div>
                            <div class="col-md-4">
                                <label for="dated" class="form-label">અટક કર્યા તા.ટા.</label>
                                <input type="text" class="form-control" id="dated" name="dated" placeholder="અટક કર્યા તા.ટા." />
                            </div>
                            <div class="col-md-4">
                                <label for="accusedNameAddress" class="form-label">આરોપી નુ નામ</label>
                                <input type="text" class="form-control" id="accusedNameAddress" name="accusedNameAddress" placeholder="આરોપી નુ નામ" />
                            </div>
                            <div class="col-md-4">
                                <label for="address" class="form-label">સરનામુ</label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="સરનામુ" />
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label" for="cognizableOffens">
                                        કોગ્નીઝેબલ ગુનો કરતી જ વખતે અટક કરેલ છે કે કેમ ?
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="cognizableOffens" name="cognizableOffens" value="true">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <label class="form-check-label" for="victimsFingerprint">
                                        આરોપીના ફીંગરપ્રિન્ટ સર્ચ સ્લીપ લીધેલ છે કે કેમ.? હા/ના
                                    </label>
                                    <input class="form-check-input" type="checkbox" id="victimsFingerprint" name="victimsFingerprint" value="true">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="victimsFingerprintRemark" class="form-label">કોલમ .70C માં જો ના તો કયા કારણસર લીધેલ નથી.?</label>
                                <input type="text" class="form-control" id="victimsFingerprintRemark" name="victimsFingerprintRemark" placeholder="કોલમ .70C માં જો ના તો કયા કારણસર લીધેલ નથી.?" />
                            </div>
                            <div class="col-md-6">
                                <label for="crpc41c" class="form-label">ગુનામાં પાછળથી અટક કરેલ હોય તો તે અંગેના CRPC -41 C</label>
                                <input type="text" class="form-control" id="crpc41c" name="crpc41c" placeholder="ગુનામાં પાછળથી અટક કરેલ હોય તો તે અંગેના CRPC -41 C" />
                            </div>
                            <div class="col-md-4">
                                <label for="designationName" class="form-label">અટક કરનાર અધિ.નુ નામ હોદ્દો</label>
                                <input type="text" class="form-control" id="designationName" name="designationName" placeholder="અટક કરનાર અધિ.નુ નામ હોદ્દો" />
                            </div>

                            <div class="col-md-4">
                                <label for="releaseTheBail" class="form-label">જામીન મુકત કર્યા</label>
                                <select id="releaseTheBail" name="releaseTheBail" class="form-select">
                                    <option selected disabled>---Select---</option>
                                    <option value="હા">હા</option>
                                    <option value="ના">ના</option>
                                    <option value="નજર કેદ છે">નજર કેદ છે</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="departInCourt" class="form-label">કોર્ટ માં રવાના</label>
                                <input type="text" class="form-control" id="departInCourt" name="departInCourt" placeholder="અટક કરનાર અધિ.નુ નામ હોદ્દો" />
                            </div>
                            <div class="col-md-6">
                                <label for="numberOfAccused" class="form-label">આરોપી ની સંખ્‍યા</label>
                                <input type="text" class="form-control" id="numberOfAccused" name="numberOfAccused" placeholder="આરોપી ની સંખ્‍યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="createdDate" class="form-label">તારીખ</label>
                                <input type="date" name="createdDate" id="createdDate" class="form-control  date-today" aria-label="...">
                            </div>
                            <div class="modal-footer">
                                <button type="submit" id="submitbtn" class="btn btn-primary">+ ADD CRPC૪૧C મુજબ આરોપી ની હીકકત દર્શાવતુ પત્રક</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </form>
                        <!-- End Multi Columns Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Basic Modal-->
@section Scripts {
    <script src="~/js/AhmedabadCityDR_JS/CRPC41C_Amendment.js" type="text/javascript"></script>
}