@{
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
    ViewData["Title"] = "CRPC";
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>CRPC ૪૧(૧)ડી મુજબના કેસો ની વિગત</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + Add CRPC ૪૧(૧) ની વિગત
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" name="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="data_CRPC" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>

<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> CRPC ૪૧(૧) ની વિગત</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2">
                        <!-- Multi Columns Form -->
                        <form class="row g-4 " id="form_CRPC">
                            <input type="text" id="crpcid" name="crpcid" value="0" style="display:none" class="d-none" placeholder="" />
                            @if (policeStationId == 0)
                            {
                                <div class="col-md-6">
                                    <div class="dropdown">
                                        <label for="policeStationId" class="form-label">પોલીસ સ્ટેશન</label>
                                        <select id="policeStationId" name="policeStationId" class="form-select" required>
                                            <option value="" selected disabled>--Select PoliceStation Name--</option>
                                        </select>
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <label for="crpcnumber" class="form-label">સ્ટે. ડા. એ.નં.</label>
                                <input type="text" class="form-control" id="crpcnumber" name="crpcnumber" placeholder="સ્ટે. ડા. એ.નં." />
                            </div>
                            <div class="col-md-6">
                                <label for="crime" class="form-label">ફરીયાદી</label>
                                <input type="text" class="form-control" id="crime" name="crime" placeholder="ફરીયાદી" />
                            </div>
                            <div class="col-md-6">
                                <label for="accusedName" class="form-label">પકડાયેલ આરોપી</label>
                                <input type="text" class="form-control" id="accusedName" name="accusedName" placeholder="પકડાયેલ આરોપી" />
                            </div>

                            <div class="col-md-6">
                                <label for="vehicalDetails" class="form-label">મળી આવેલ વાહન/ મુદ્દામાલની વિગત</label>
                                <input type="text" class="form-control" id="vehicalDetails" name="vehicalDetails" placeholder="મળી આવેલ વાહન/ મુદ્દામાલની વિગત" />
                            </div>
                            <div class="col-md-6">
                                <label for="accusedDetails" class="form-label">પકડાયેલ આરોપીથી શોધાયેલ ગુન્હાની વિગત</label>
                                <input type="text" class="form-control" id="accusedDetails" name="accusedDetails" placeholder="પકડાયેલ આરોપીથી શોધાયેલ ગુન્હાની વિગત" />
                            </div>
                            <div class="col-md-6">
                                <label for="shortDetails" class="form-label">આરોપીનો પૂર્વ ઇતિહાસ</label>
                                <input type="text" class="form-control" id="shortDetails" name="shortDetails" placeholder="આરોપીનો પૂર્વ ઇતિહાસ" />
                            </div>
                            <div class="col-md-6">
                                <label for="createdDate" class="form-label">તારીખ</label>
                                <input type="date" name="createdDate" id="createdDate" class="form-control date-today" aria-label="...">
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" id="submitbtn" class="btn btn-primary">+ ADD CRPC ૪૧(૧) ની વિગત.</button>
                            </div>
                        </form>
                        <!-- End Multi Columns Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Basic Modal-->
@section Scripts {
    <script src="~/js/AhmedabadCityDR_JS/CRPC.js" type="text/javascript"></script>
}