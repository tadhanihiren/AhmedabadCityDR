@{
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
    ViewData["Title"] = "MCR_Details";
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>MCR અંગેની હકિકત દર્શાવતું પત્રક</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + ADD MCR-Details
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" name="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="data_MCRDetails" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>

<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> MCR-Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2" >
                        <!-- Multi Columns Form -->
                        <form class="row g-4 " id="form_MCRDetails">
                            <input type="text" id="mcrId" name="mcrId" value="0" style="display:none" class="d-none" placeholder="" />
                            @if (policeStationId == 0)
                            {
                                <div class="col-md-6">
                                    <div class="dropdown">
                                        <label for="policeStationId" class="form-label">પોલીસ સ્ટેશન</label>
                                        <select id="policeStationId" name="policeStationId" class="form-select" required>
                                            <option value="" selected disabled>--Select PoliceStation Name--</option>
                                        </select>
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <label for="mcrcardNo" class="form-label">ચેક કરેલ MCR કાર્ડ નંબર</label>
                                <input type="text" class="form-control" id="mcrcardNo" name="mcrcardNo" placeholder="ચેક કરેલ MCR કાર્ડ નંબર" />
                            </div>
                            <div class="col-md-6">
                                <label for="nameOfIsm" class="form-label">ચેક કરેલ MCR કાર્ડવાળા ઇસમનું નામ</label>
                                <input type="text" class="form-control" id="nameOfIsm" name="nameOfIsm" placeholder="ચેક કરેલ MCR કાર્ડવાળા ઇસમનું નામ" />
                            </div>
                            <div class="col-md-6">
                                <label for="latestMobileNo" class="form-label">ચેક કરેલ MCR કાર્ડવાળા ઇસમનો લેટેસ્ટ મોબાઇલ નંબર</label>
                                <input type="text" class="form-control" id="latestMobileNo" name="latestMobileNo" placeholder="ચેક કરેલ MCR કાર્ડવાળા ઇસમનો લેટેસ્ટ મોબાઇલ નંબર" />
                            </div>
                            <div class="col-md-6">
                                <label for="latestAddressOfIsm" class="form-label">ચેક કરેલ MCR કાર્ડવાળા ઇસમનું લેટેસ્ટ સરનામું</label>
                                <input type="text" class="form-control" id="latestAddressOfIsm" name="latestAddressOfIsm" placeholder="ચેક કરેલ MCR કાર્ડવાળા ઇસમનું લેટેસ્ટ સરનામું" />
                            </div>
                            <div class="col-md-6">
                                <label for="remarks" class="form-label">રિમાર્કસ</label>
                                <input type="text" class="form-control" id="remarks" name="remarks" placeholder="રિમાર્કસ" />
                            </div>
                            <div class="col-md-6">
                                <label for="createdDate" class="form-label">તારીખ </label>
                                <input type="date" name="createdDate" id="createdDate" class="form-control date-today" aria-label="...">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" id="submitbtn" class="btn btn-primary">+ ADD MCR-Details</button>
                            </div>
                        </form>
                        <!-- End Multi Columns Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Basic Modal-->
@section Scripts {
    <script src="~/js/AhmedabadCityDR_JS/MCR_Details.js" type="text/javascript"></script>
}