@{
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
    ViewData["Title"] = "Vehicle_Checking";
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>તમામ પો.સ્ટે./ટ્રાફિક શાખાનું વાહન ચેકિંગની વિગત</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + ADD વાહન તપાસની માહિતી
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" name="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="data_VehicleChecking" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>
<div class="modal modal-lg" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">વાહન તપાસની માહિતી</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2" >
                        <!-- Multi Columns Form -->
                        <form class="row g-4 " id="form_VehicleChecking">
                            <input type="text" id="vehicleCheckingId" name="vehicleCheckingId" value="0" style="display:none" class="d-none" placeholder="" />
                            @if (policeStationId == 0)
                            {
                                <div class="col-md-6">
                                    <div class="dropdown">
                                        <label for="policeStationId" class="form-label">પોલીસ સ્ટેશન</label>
                                        <select id="policeStationId" name="policeStationId" class="form-select" required>
                                            <option value="" selected disabled>--Select PoliceStation--</option>
                                        </select>
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <label for="subCategoryId" class="form-label">વિભાગ  </label>
                                <select id="subCategoryId" name="subCategoryId" class="form-select" asp-items="ViewBag.SubCategory">
                                    <option selected>---Select Category---</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="checktwowheeler" class="form-label">કુલ ચેક કરેલ વાહનો ની સંખ્યા</label>
                                <input type="text" class="form-control" id="checktwowheeler" name="checktwowheeler" placeholder="કુલ ચેક કરેલ વાહનો ની સંખ્યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="checkthreewheeler" class="form-label">કુલ ચેક કરેલ મેમો ની સંખ્યા</label>
                                <input type="text" class="form-control" id="checkthreewheeler" name="checkthreewheeler" placeholder="કુલ ચેક કરેલ મેમો ની સંખ્યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="dandtwowheeler" class="form-label">કુલ દંડ વસુલાત</label>
                                <input type="text" class="form-control" id="dandtwowheeler" name="dandtwowheeler" placeholder="કુલ દંડ વસુલાત" />
                            </div>
                            <div class="col-md-6">
                                <label for="detain" class="form-label">કુલ ડિટેઈન કરેલ વાહનો ની સંખ્યા</label>
                                <input type="text" class="form-control" id="detain" name="detain" placeholder="કુલ ડિટેઈન કરેલ વાહનો ની સંખ્યા" />
                            </div>
                            <div class="col-md-6">
                                <label for="remarks" class="form-label">રિમાર્કસ</label>
                                <input type="text" class="form-control" id="remarks" name="remarks" placeholder="રિમાર્કસ" />
                            </div>
                            <div class="col-md-6">
                                <label for="createdDate" class="form-label">તારીખ </label>
                                <input type="date" name="createdDate" id="createdDate" class="form-control date-today" aria-label="..." >
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" id="submitbtn" class="btn btn-primary">+ ADD  વાહન તપાસની માહિતી</button>
                            </div>
                        </form>
                        <!-- End Multi Columns Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Basic Modal-->
@section Scripts {
    <script src="~/js/AhmedabadCityDR_JS/Vehicle_Checking.js" type="text/javascript"></script>
}