

@{
    ViewData["Title"] = "Signal_BlinkRing";
}

<div class="card-body">
    <div class="card-title">
        <h5>ટ્રાફિક સિગ્‍નલ બ્લીંકરીંગ અંગે</h5>
    </div>
</div>


<section class="section" style="font-weight:900">
    <div class="row">
        <div class="col-lg-6">
            <!-- Basic Modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal" style="margin-left:20px">
                + ADD ટ્રાફિક સિગ્‍નલ બ્લીંકરીંગ 
            </button>
            <div class="modal modal-lg" id="basicModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">ટ્રાફિક સિગ્‍નલ બ્લીંકરીંગ  </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card">
                                <div class="card-body" >
                                    <!-- Multi Columns Form -->
                                    <form class="row g-4 center">
                                        <div class="col-md-12">
                                            <label for="inputState" class="form-label">પોલીસ સ્ટેશન</label>
                                            <select id="inputState" class="form-select" >
                                                <option selected>---Select PoliceStation---</option>
                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputAddress5" class="form-label">કુલ કેટલી જગ્‍યાએ બ્લીંકરીંગ કરવામાં આવેલ છે.</label>
                                            <input type="text" class="form-control" id="inputAddres5s" placeholder="કુલ કેટલી જગ્‍યાએ બ્લીંકરીંગ કરવામાં આવેલ છે." >
                                        </div>
                                        <div class="col-md-6">
                                            <label for="inputAddress2" class="form-label">કેવા કારણોસર કરવામાં આવેલ છે.</label>
                                            <input type="text" class="form-control" id="inputAddress2" placeholder="કેવા કારણોસર કરવામાં આવેલ છે.">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="inputAddress5" class="form-label">કોના હુકમથી કરવામાં આવેલ છે.</label>
                                            <input type="text" class="form-control" id="inputAddres5s" placeholder="કોના હુકમથી કરવામાં આવેલ છે.">
                                        </div>
                                        <div class="col-md-12">
                                            <label for="inputAddress2" class="form-label">કેટલા સમય સુધી બ્લીંકરીંગ કરેલ છે.</label>
                                            <input type="text" class="form-control" id="inputAddress2" placeholder="કેટલા સમય સુધી બ્લીંકરીંગ કરેલ છે.">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="inputAddress5" class="form-label">રીમાકર્સ</label>
                                            <input type="text" class="form-control" id="inputAddres5s" placeholder="રીમાકર્સ">
                                        </div>
                                         <div class="col-md-6">
                                            <label for="inputCity" class="form-label">તારીખ </label>
                                            <input type="date" name="arrival_date" id="arrival_date" class="form-control" aria-label="..." >
                                        </div>
                                       
                                    </form><!-- End Multi Columns Form -->

                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">ADD ટ્રાફિક સિગ્‍નલ બ્લીંકરીંગ  </button>
                        </div>
                    </div>
                </div>
            </div><!-- End Basic Modal-->

        </div>
    </div>

</section>

