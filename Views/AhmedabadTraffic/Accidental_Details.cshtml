@{
    ViewData["Title"] = "Accidental_Details";
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>અકસ્માત મોત (AD)</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + ADD ટ્રાફિક અકસ્માતની માહિતી
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>

<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content pb-0">
            <div class="modal-header">
                <h5 class="modal-title">ટ્રાફિક અકસ્માતની માહિતી</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2">
                        <!-- Multi Columns Form -->
                        <form class="row g-3">
                            <div class="col-md-4">
                                <label for="inputState" class="form-label">પોલીસ સ્ટેશન</label>
                                <select id="inputState" class="form-select">
                                    <option selected>---Select PoliceStation---</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputState" class="form-label">SubCategory</label>
                                <select id="inputState" class="form-select">
                                    <option selected>---Select SubCategory---</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">ગુના રજી. નંબર / કલમ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="ગુના રજી. નંબર / કલમ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">બનાવ બના ટાઇમ, તારીખ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="બનાવ બના ટાઇમ, તારીખ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">બનાવ બન્યાનું સ્થળ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="બનાવ બન્યાનું સ્થળ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">બનાવ જાહેર તારીખ, ટાઇમ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="બનાવ જાહેર તારીખ, ટાઇમ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">અક્ષાંશ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="અક્ષાંશ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">રેખાંશ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="રેખાંશ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">ફરિયાદીનું નામ તથા સરનામું</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="ફરિયાદીનું નામ તથા સરનામું" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">આરોપીનું નામ તથા સરનામું</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="આરોપીનું નામ તથા સરનામું" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">મરણ/ઇજા પામનારનું નામ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="મરણ/ઇજા પામનારનું નામ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">તપાસ કરનારનું નામ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="તપાસ કરનારનું નામ" />
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">ટૂંકી વિગતો</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="ટૂંકી વિગતો" />
                            </div>
                             <div class="col-md-4">
                                <label for="createdDate" class="form-label">તારીખ </label>
                                <input type="date" id="createdDate" name="createdDate" class="form-control date-today" aria-label="..." required>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="submitbtn">+ADD ટ્રાફિક અકસ્માતની માહિતી </button>
                            </div>
                        </form>
                        <!-- End Multi Columns Form -->
                    </div>
                </div>
            </div>

        </div>
    </div>
</div><!-- End Basic Modal-->
