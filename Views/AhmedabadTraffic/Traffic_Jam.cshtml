@{
    ViewData["Title"] = "Traffic_Jam";
    var policeStationId = Convert.ToInt32(httpContextAccessor.HttpContext.GetClaimsPrincipal().PoliceStationId);
}

<div class="card">
    <div class="card-body">
        <div class="row card-title">
            <div class="col p-0 align-items-center" style="display: flex;align-items: center;">
                <h5>ટ્રાફીકજામ / નિકાલ નું પત્રક</h5>
            </div>
            <div class="col p-0">
                <button type="button" id="addData" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#basicModal">
                    + ADD ટ્રાફીકજામ / નિકાલ નું પત્રક
                </button>
            </div>
        </div>
        <div class="row pb-4">
            <div class="col-md-2 mb-1">
                <input type="date" name="searchFromDate" id="searchFromDate" class="form-control date-today">
            </div>
            <div class="col-md-2 mb-1">
                <input type="date" name="searchToDate" id="searchToDate" class="form-control date-today">
            </div>
            <div class="col-md-4 mb-1">
                @if (policeStationId == 0)
                {
                    <select id="searchPoliceStationId" name="searchPoliceStationId" class="form-select" required>
                        <option value="" selected>--Select PoliceStation Name--</option>
                    </select>
                }
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-secondary" id="searchButton" value="Search" />
            </div>
            <div class="col-md-2 mb-1">
                <input type="button" class="form-control btn btn-outline-success" value="Report View" />
            </div>
        </div>
        <table id="" class="display cell-border compact order-column stripe" style="width:100%; overflow-x: scroll; table-layout: fixed">
        </table>
    </div>
</div>


<div class="modal modal-xl" id="basicModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content pb-0">
            <div class="modal-header">
                <h5 class="modal-title">ટ્રાફીકજામ / નિકાલ નું પત્રક</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card mb-0">
                    <div class="card-body p-1 m-2">
                        <!-- Multi Columns Form -->
                        <form class="row g-4 center">
                            <div class="col-md-4">
                                <label for="inputState" class="form-label">પોલીસ સ્ટેશન</label>
                                <select id="inputState" class="form-select">
                                    <option selected>---Select PoliceStation---</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">Caller ૧૦૦ ૧૦૯૫</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="પો.સ્‍ટે વિસ્‍તારમાં કુલ કેટલા સિગ્‍નલ આવેલ છે?">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">નામ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="નામ">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">મો.નંબર</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="મો.નંબર">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress2" class="form-label">ટ્રાફીક જામનું સ્થળ</label>
                                <input type="text" class="form-control" id="inputAddress2" placeholder="ટ્રાફીક જામનું સ્થળ">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">મેસેજ મળ્યા સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="મેસેજ મળ્યા સમય">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">બીટ ઈન્ચાર્જ/આસી બીટ ઈન્ચારર્જ જાણ કર્યા સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="બીટ ઈન્ચાર્જ/આસી બીટ ઈન્ચારર્જ જાણ કર્યા સમય">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">બીટ ઈન્ચાર્જ/આસી બીટ ઈન્ચારર્જ ક્યાંથી રવાના અને સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="બીટ ઈન્ચાર્જ/આસી બીટ ઈન્ચારર્જ ક્યાંથી રવાના અને સમય">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">સ્થળ પર પહોંચ્યા નો સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="સ્થળ પર પહોંચ્યા નો સમય">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">કેટલો સમય ટ્રાફીક જામ રહેલ તે સમય મીનીટ(6-10)</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="કેટલો સમય ટ્રાફીક જામ રહેલ તે સમય મીનીટ(6-10)">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">પો.સબ.ઈન્સ.શ્રી પહોંચ્યા નામ અને સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="પો.સબ.ઈન્સ.શ્રી પહોંચ્યા નામ અને સમય">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">પો.ઈન્સ.શ્રી પહોંચ્યા નામ અને સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="પો.ઈન્સ.શ્રી પહોંચ્યા નામ અને સમય ">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAddress5" class="form-label">એસીપી/ડીસીપી પહોંચ્યાનો સમય</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="એસીપી/ડીસીપી પહોંચ્યાનો સમય">
                            </div>
                            <div class="col-md-6">
                                <label for="inputAddress5" class="form-label">રીમાર્ક્સ</label>
                                <input type="text" class="form-control" id="inputAddres5s" placeholder="રીમાર્ક્સ">
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">તારીખ </label>
                                <input type="date" name="arrival_date" id="arrival_date" class="form-control" aria-label="...">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="submitbtn">ADD ટ્રાફીકજામ / નિકાલ </button>
                            </div>
                        </form><!-- End Multi Columns Form -->

                    </div>
                </div>
            </div>

        </div>
    </div>
</div><!-- End Basic Modal-->
