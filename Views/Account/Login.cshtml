@model AhmedabadCityDR.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AHMEDABAD CITY ADMIN</title>
    <link rel="icon" type="image/x-icon" href="~/images/Gujarat_Police.ico" asp-append-version="true">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
</head>
<body class="text-center">
    <main class="form-signin">
        <form method="post" asp-action="Login" asp-controller="Account">
            <img class="mb-4"
                 src="~/images/Gujarat_Police.png"
                 alt="..."
                 width="200px"
                 height="200px" />
            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- User name -->
            <div class="form-floating">
                <input type="text"
                       asp-for="UserName"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       required />
                <label asp-for="UserName">Username</label>
            </div>
            <!-- Password -->
            <div class="form-floating">
                <input type="password"
                       asp-for="Password"
                       class="form-control"
                       id="floatingPassword"
                       placeholder="Password"
                       required />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <!-- Remember me-->
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="remember" asp-for="RememberMe" value="true" /> Remember me
                </label>
            </div>

            <!-- Button sign in -->
            <button class="w-100 btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </form>
    </main>
</body>
</html>